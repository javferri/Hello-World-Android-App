<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- Application logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/logo"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_text"
            android:gravity="center"
            android:textSize="40dp"
            android:fontFamily="cursive"
            android:layout_marginBottom="30dp" />

        <!-- Username Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_login_username"
                android:gravity="center"
                android:inputType="text"
                android:hint="@string/hint_username"
                android:textStyle="italic"
                android:textColor="#000000"/>
        </android.support.design.widget.TextInputLayout>


        <!-- Birthdate Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/register_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_register_birthdate"
                android:textStyle="italic"
                android:textColor="#000000"
                android:inputType="text"
                android:focusable="false"
                android:clickable="true"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Birthhour Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText android:id="@+id/register_birthhour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_register_birthhour"
                android:textStyle="italic"
                android:textColor="#000000"
                android:inputType="text"
                android:focusable="false"
                android:clickable="true"/>
        </android.support.design.widget.TextInputLayout>

        <!-- Sign up button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorButton"
            android:layout_margin="24dp"
            android:padding="12dp"
            android:text="@string/register_text"/>

    </LinearLayout>
</ScrollView>